                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="reference">Reference <font color="blue">*</font></label>
                                        <input type="text" class="form-control" id="reference" name="reference" data-val="true" data-val-required="La Reference est obligatoire">
                                        @Html.ValidationMessage("reference")
                                    </div>
                                    <div class="form-group">
                                        <label for="nom">Nom <font color="blue">*</font></label>
                                        <input type="text" class="form-control" id="nom" name="nom" data-val="true" data-val-required="Le Nom est obligatoire" >
                                        @Html.ValidationMessage("nom")
                                    </div>
                                    <div class="form-group">
                                        <label for="formule">Formule <font color="blue">*</font></label>
                                        <input type="text" class="form-control" id="formule" name="formule" data-val="true" data-val-required="La Formule est obligatoire">
                                        @Html.ValidationMessage("formule")
                                    </div>
                                    <div class="form-group">
                                        <label for="cas">CAS <font color="blue">*</font></label>
                                        <input type="number" class="form-control" id="cas" name="cas" data-val="true" data-val-required="Le CAS est obligatoire" >
                                        @Html.ValidationMessage("cas")
                                    </div>
                                    <div class="form-group">
                                        <label for="toxicite">Toxicite</label>
                                        <input type="text" class="form-control" id="toxicite">
                                    </div>
                                    <div class="form-group">
                                        <label for="etatPhysique">Etat Physique</label>
                                        <input type="text" class="form-control" id="etatPhysique">
                                    </div>
                                    <div class="form-group">
                                        <label for="toxicite">Stock</label>
                                        <input type="text" class="form-control" id="stock">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="uniteMesure">Unite Mesure</label>
                                        <input asp-for="UniteMesure" class="form-control" id="uniteMesure">
                                    </div>
                                    <div class="form-group">
                                        <label for="tempMinStockage">Temperature Minimum Stockage</label>
                                        <input type="number" class="form-control" id="tempMinStockage">
                                    </div>
                                    <div class="form-group">
                                        <label for="tempMaxStockage">Temperature Maximum Stockage</label>
                                        <input type="number" class="form-control" id="tempMaxStockage">
                                    </div>
                                    <div class="form-group">
                                        <label for="conditionStockage">Condition de Stockage</label>
                                        <input type="text" class="form-control" id="conditionStockage">
                                    </div>
                                    <div class="form-group">
                                        <label for="typeGestion">Type de Gestion</label>
                                        <input type="text" class="form-control" id="typeGestion">
                                    </div>
                                    <div class="form-group">
                                        <label for="stockMin">Stock Minimum</label>
                                        <input type="number" class="form-control" id="stockMin" />
                                    </div>
                                    <!--   <div class="form-group">
                                           <label>Fiche de sécurité du produit </label>
                                           <input type="file" id="files" name="files" multiple>
                                    </div>-->
                                    <div class="form-group">
                                        <label>Perissable</label>
                                        <label>  </label>
                                        <label>  </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline1" value="1" checked>Oui
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline2" value="0">Non
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" onclick="AddProduit(form)">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


